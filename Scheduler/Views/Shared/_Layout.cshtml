<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-light bg-dark">
        <div class="row">
            <div class="col-6">
                <span class="h1, navbar-brand mb-0 text-light text-center">ПЛАНИРОВЩИК</span>
            </div>
            <div class="col-3">
                @Html.ActionLink("Главная", "Index", "Scheduler", null, new { role = "button", @class = "btn btn-link, text-light" })
            </div>
            <div class="col-3">
                @Html.ActionLink("Создать задачу", "Create", "Scheduler", null, new { role = "button", @class = "btn btn-link, text-light" })
            </div>
        </div>
    </nav>

    <div class="container">
        <br />
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>