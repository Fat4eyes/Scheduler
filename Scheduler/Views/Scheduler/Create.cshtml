@model Scheduler.Models.Task

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Создание новой задачи. Введите данные..</h4>
        <hr />

        @Html.Partial("_TaskForm", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавление" class="btn btn-default" />
            </div>
        </div>
    </div>
}